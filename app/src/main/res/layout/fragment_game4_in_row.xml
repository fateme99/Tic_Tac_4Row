<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/four_row_bg"
    tools:context=".controller.fragment.Game4InRowFragment">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="@string/game_row"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/turn"
            android:textSize="@dimen/font_size_middle"
            style="@style/TextAppearance.MaterialComponents.Headline6"

            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_size_middle"
            style="@style/TextAppearance.MaterialComponents.Headline6"

            android:layout_height="wrap_content"
            tools:text="fateme" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/zero_zero"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/zero_one"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/zero_two"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/zero_three"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:id="@+id/zero_four"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/one_zero"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/one_one"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/one_two"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/one_three"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:id="@+id/one_four"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/two_zero"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/two_one"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/two_two"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/two_three"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:id="@+id/two_four"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/three_zero"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/three_one"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/three_two"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/three_three"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:id="@+id/three_four"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/four_zero"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/four_one"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/four_two"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"
            android:id="@+id/four_three"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:backgroundTint="@color/white"
            android:id="@+id/four_four"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/snackBar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</LinearLayout>